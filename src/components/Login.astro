<div
  id="loginDialog"
  class="fixed inset-0 z-50 hidden flex items-center justify-center bg-black/50 backdrop-blur-sm"
>
  <div class="relative w-full max-w-md bg-white rounded-2xl shadow-xl p-8">

    <!-- Cerrar -->
    <button
      id="closeLoginBtn"
      class="absolute top-4 right-4 text-2xl text-gray-500 hover:text-black"
    >
      ×
    </button>

    <h2 class="text-center text-3xl font-bold mb-8">
      Acceso Administrativo
    </h2>

    <form id="loginForm" class="space-y-6">
      <div>
        <label class="block text-base font-semibold mb-2">
          Usuario
        </label>
        <input
          id="username"
          type="text"
          placeholder="admin"
          class="w-full rounded-xl border-2 border-gray-300 px-4 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-black"
          required
        />
      </div>

      <div>
        <label class="block text-base font-semibold mb-2">
          Contraseña
        </label>
        <input
          id="password"
          type="password"
          class="w-full rounded-xl border border-gray-200 px-4 py-3 text-lg focus:outline-none focus:ring-2 focus:ring-black"
          required
        />
      </div>

      <p
        id="loginError"
        class="hidden text-center text-sm text-red-500"
      >
        Usuario o contraseña incorrectos
      </p>

      <button
        type="submit"
        class="w-full rounded-xl bg-black py-3 text-lg font-semibold text-white hover:bg-gray-900 transition"
      >
        Iniciar Sesión
      </button>

      <p class="text-center text-sm text-gray-500">
        Credenciales de prueba: <strong>admin / admin123</strong>
      </p>
    </form>
  </div>
</div>

<script>
  import { initLoginDialog } from '../scripts/loginDialog.js';
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLoginDialog);
  } else {
    initLoginDialog();
  }
</script>

